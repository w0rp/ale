{
    "name": "roku-deploy",
    "version": "3.3.0",
    "description": "Package and publish a Roku application using Node.js",
    "main": "dist/index.js",
    "scripts": {
        "build": "rimraf dist && tsc",
        "preversion": "npm run build && npm run lint && npm run test",
        "prepublishOnly": "npm run build",
        "lint": "eslint \"./src/**/*.ts\"",
        "test": "nyc mocha src/RokuDeploy.spec.ts src/util.spec.ts --full-trace",
        "test:nocover": "ts-mocha src/RokuDeploy.spec.ts src/util.spec.ts --full-trace",
        "test:device": "nyc mocha src/device.spec.ts --full-trace",
        "test:all": "nyc mocha src/**/*.spec.ts --full-trace",
        "test-without-sourcemaps": "npm run build && nyc mocha dist/**/*.spec.js",
        "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "dependencies": {
        "archiver": "^3.0.0",
        "dateformat": "^3.0.3",
        "fs-extra": "^7.0.1",
        "glob": "^7.1.6",
        "jsonc-parser": "^2.3.0",
        "minimatch": "^3.0.4",
        "path": "^0.12.7",
        "request": "^2.88.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/archiver": "^2.1.2",
        "@types/chai": "^4.2.3",
        "@types/denodeify": "^1.2.31",
        "@types/fs-extra": "^5.0.1",
        "@types/mocha": "^5.2.5",
        "@types/node": "^11.9.0",
        "@types/request": "^2.47.0",
        "@types/sinon": "^7.0.6",
        "@types/xml2js": "^0.4.5",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "adm-zip": "^0.4.11",
        "chai": "^4.2.0",
        "chai-files": "^1.4.0",
        "coveralls": "^3.0.0",
        "deferred": "^0.7.11",
        "eslint": "^6.8.0",
        "mocha": "^6.2.1",
        "node-run-cmd": "^1.0.1",
        "nyc": "^15.0.0",
        "rimraf": "^2.6.2",
        "sinon": "^7.2.3",
        "source-map-support": "^0.5.13",
        "testdouble": "^3.5.2",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.7.2"
    },
    "typings": "dist/index.d.ts",
    "bin": {
        "roku-deploy": "dist/cli.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/RokuCommunity/roku-deploy.git"
    },
    "author": "",
    "license": "ISC",
    "nyc": {
        "include": [
            "src/index.ts",
            "src/RokuDeploy.ts",
            "src/util.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "check-coverage": true,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
    }
}
